<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- These settings headers are only used on tablets. -->

    <header
        android:fragment="com.alberto.sunshine.SettingsActivity$GeneralPreferenceFragment"
        android:icon="@drawable/ic_info_black_24dp"
        android:title="@string/pref_general_title_header">
        <extra android:name="settings" android:value="prefs_general" ></extra>
    </header>
    <header
        android:fragment="com.alberto.sunshine.SettingsActivity$LocationPreferenceFragment"
        android:icon="@drawable/ic_sync_black_24dp"
        android:title="@string/pref_general_title_location">
        <extra
            android:name="location_settings"
            android:value="prefs_location">
        </extra>
    </header>

</preference-headers>